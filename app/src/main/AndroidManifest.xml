<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.edu.hfut.xc.hfut">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_LOGS" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:theme="@style/activity_main_theme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:theme="@style/activity_no_tilte" />
        <activity android:name=".BaseActivity" />
        <activity
            android:name=".ThemeSettingsActivity"
            android:theme="@style/activity_no_tilte" />
        <activity
            android:name=".NewsActivity"
            android:theme="@style/activity_no_tilte" />
        <activity
            android:name=".LoginActivity"
            android:theme="@style/activity_no_tilte"
            android:windowSoftInputMode="adjustNothing|stateVisible" />
        <activity
            android:name=".LibraryLoginActivity"
            android:theme="@style/activity_no_tilte"
            android:windowSoftInputMode="adjustNothing|stateVisible" />
        <activity
            android:name=".InfoActivity"
            android:theme="@style/activity_no_tilte" />
        <activity
            android:name=".IntroduceActivity"
            android:theme="@style/activity_no_tilte"
            android:windowSoftInputMode="adjustResize|stateVisible" />
    </application>

</manifest>
